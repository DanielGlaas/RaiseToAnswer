<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/raise_to_answer_header"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/raise_to_answer_header" />

        <LinearLayout
            android:id="@+id/feature_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/feature_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_features"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <CheckedTextView
                android:id="@+id/feature_raise_to_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@drawable/checkbox"
                android:gravity="center_vertical"
                android:text="@string/feature_raise_to_answer"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:minHeight="48dp"/>

            <CheckedTextView
                android:id="@+id/feature_flip_over_to_decline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@drawable/checkbox"
                android:text="@string/feature_flip_over_to_decline"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/behaviour_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/behaviour_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_behaviour"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <CheckedTextView
                android:id="@+id/behaviour_beep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="@drawable/checkbox"
                android:gravity="center_vertical"
                android:text="@string/behaviour_beep"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:minHeight="48dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/test" />
    </LinearLayout>

</ScrollView>